<div class="list-ul">
  <h2 class="list-ul__heading">{{ section.settings.heading }}</h2>
   {% for block in section.blocks %}
     <ul>
       {%  for block in section.blocks %}
       <li>{{ block.settings.text_item }}</li>
       {% endfor %}
     </ul>
    {% endfor %}
    {% if section.settings.show_block %}
        <p>{{ section.settings.show_block }}</p>
    {% endif %}

  {% case section.settings.radio %}
    {% when "red" %}
    <div style="color: red"> Chọn màu đỏ</div>
      {% when "blue" %}
    <div style="color: blue"> Chọn màu xanh</div>
      {% when "yellow" %}
    <div style="color: yellow"> Chọn màu vàng</div>
  {% endcase %}
</div>

{% schema %}
  {
    "name" : "List UL",
    "settings": [
      {
        "type": "text",
        "id" : "heading",
        "label": "Heading",
        "default": "this is Heading"
      },
      {
        "type": "number",
        "id": "show_block",
        "label" : "show Block",
        "default": 15
      },
      {
        "type": "range",
        "id": "number_column",
        "label": "Number Column",
         "min": 1,
        "max": 4,
        "step": 1,
        "default": 4
      },
      {
        "type": "radio",
        "id": "radio_color",
        "label": "Choose Color",
        "options": [
          {
            "value": "red",
            "label": "red"
          },
                    {
            "value": "blue",
            "label": "Blue"
          },
                    {
            "value": "yellow",
            "label": "Yellow"
          }
        ]
      }
    ],
    "blocks" : [
      {
        "type": "column",
        "name": "Column",
        "settings" : [ 
          {
          "type": "text",
          "id": "text_item",
          "label" : "Item",
          "default": "This is li"
        }]

      }
    ],
    "presets": [
      {
        "name": "List Ul"
      }
    ]
  }
{% endschema %}


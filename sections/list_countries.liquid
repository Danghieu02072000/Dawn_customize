<div class="list-ul">
  <h2 class="list-ul__heading">{{ section.settings.heading }}</h2>
   {% for block in section.blocks %}
     <ul>
       {%  for block in section.blocks %}
       <li>{{ block.settings.text_item }}</li>
       {% endfor %}
     </ul>
    {% endfor %}
    {% if section.settings.show_block %}
        <p>{{ section.settings.show_block }}</p>
    {% endif %}

  {% case section.settings.radio_color %}
    {% when "red" %}
    <div style="color: red; font-size: {{ section.settings.font_size }}px"> Chọn màu đỏ</div>
      {% when "blue" %}
    <div style="color: blue ; font-size: {{ section.settings.font_size }}px"> Chọn màu xanh</div>
      {% when "yellow" %}
    <div style="color: yellow ; font-size: {{ section.settings.font_size }}px"> Chọn màu vàng</div>
  {% endcase %}

  <p>{{ section.settings.article.id }}</p>
  <p>{{ section.settings.article.title }}</p>
  <p>{{ section.settings.article.url }}</p>

  <p>{{ section.settings.blog.id }}</p>
  <p>{{ section.settings.blog.title }}</p>
  <p>{{ section.settings.blog.url }}</p>
  <p>{{ section.settings.collection1.title }}</p>
  <p>{{ section.settings.collection1.id }}</p>
  <p>{{ section.settings.button_link }}</p>
</div>


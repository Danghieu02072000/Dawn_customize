<div class="blog-show"> 
    <h2 class="blog-show__title"> {{ section.settings.title }}</h2>
    <h2 class="blog-show__heading"> {{ section.settings.heading }}</h2>
    <div class="blog-show__list"> 
      {% for block in section.blocks %}
          <div class="blog-show__item">
            <img src="{{ block.settings.item_img }}" alt="" >
            <h3 class="blog-show__item-heading"> {{ block.settings.item_title }}</h3>
            <p class="blog-show__item-desc"> {{ block.settings.item_text }}</p>
          </div>
      {% endfor %}
    </div>
</div>

<style>
  .blog-show {
    max-width: 120rem;
    margin: 0 auto;
    padding: 50px;
    text-align: center;
    margin-top: 30px;
  }
  .blog-show__title {
    font-size: 36px;
    line-height: 40px;
    color: rgb(255 77 32 )
  }
  .blog-show__heading {
    margin-top: 10px;
    font-size: 52px;
    line-height: 58px;
    font-weight: 700;
  }
  .blog-show__list {
    margin-top: 56px;
    display: grid;
    grid-template-columns: auto auto auto ;
  }
  .blog-show__item {
    display: flex;
    justify-content: center;
    align-items: center
  }
  .blog-show__item-heading {
    margin-top: 40px;
    font-size: 24px;
    line-height: 32px;
    font-weight: 700;
  }
  .blog-show__item-desc {
    margin-top: 20px;
    font-size: 16px;
    line-height: 24px;
    max-width: 270px;
    color: rgb(100 100 100)
  }
  .blog-show__item {
    width: 112px;
  }
</style>
{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type" : "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type" : "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks" : [
      {
        "type" : "column",
        "name" : "List Block",
        "settings" : [
          {
            "type": "text",
            "id": "item_title",
            "label" : "Title"
          },
          {
            "type": "text",
            "id": "item_text",
            "label" : "DESC"
          },
           {
            "type": "image_picker",
            "id": "item_img",
            "label" : "Image"
          }
          
        ]
      }
    ],
    "presets" : [
      {
      "name" : "Blog Show"
    }
    ] 
  }
{% endschema %}


<div class="hero-wrapper">
<div class="hero-infor">
  <h2 class="hero__title"> {{ section.settings.title }}</h2>
  <h2 class="hero__heading">{{ section.settings.heading }}</h2>
  <p class="hero__desc">{{ section.settings.desc }}</p>
  {% form 'create_customer' %}
                    <div class="">
                            <div class="px-3 flex items-center flex-1 ">
                                <input type="text" class="" placeholder="Enter your delivery location">
                                <img src="{{ section.settings.img_btn }}" alt="" >
                            </div>
                            <div class="">
                                <span class="text-base text-white hidden sm:block md:hidden lg:block">Discover</span>
                                <button class="w-10 h-10 bg-inherit sm:bg-white rounded-lg flex justify-center items-center text-white sm:text-black hover:bg-inherit hover:border-2 hover:border-white hover:text-white">
                                    >
                                </button>
                            </div>
                      </div>
{% endform %}
</div>
<div class="hero-img">
  
  <img src="{{ section.settings.img | img_url : "master" }}" class="hero__image" >
</div>
</div>
<style>
  h1,h2,h3, p {
    margin: 0;
  }
  .hero-wrapper {
    max-width: 120rem;
    padding: 0 50px; 
    margin: 0 auto;
    display: flex;
    gap: 40px;
    justify-content: space-between;
  }
  .hero-img {
    width: 45%;
    background-color: #ffbb27;
    border-radius: 1rem;
  }
  .hero-infor {
    width: 45%;
    background-color: #fff;
  }
  .hero-img > img {
      width: 100%;
  }
  .hero__title {
    font-size: 38px;
    color: #ff4d20;
    line-height: 40px;
    margin-top: 20px;
  }
  .hero__heading {
    font-size: 62px;
    font-weight: bold;
    line-height: 68px;
    margin-top: 16px;
  }
  .hero__desc {
    font-size: 18px;
    line-height: 28px;
    margin-top: 24px;
    color: #646464
  }
</style>
{% schema %}
  {
    "name" : "Herro",
    "settings": [
      {
        "type": "text",
        "id" : "title",
        "label": "Title Hero",
        "default": "this is Hero"
      },
      {
        "type": "text",
        "id" : "heading",
        "label": "Heading Hero",
        "default": "this is Hero"
      },
      {
        "type": "text",
        "id" : "desc",
        "label": "DESC Hero",
        "default": "this is Hero"
      },
      {
        "type": "image_picker",
        "id" : "img",
        "label": "Img Hero"
      },
      {
        "type": "image_picker",
        "id" : "img_btn",
        "label": "Img Button"
      }
    ],
    "presets": [
      {
        "name": "Hero"
      }
    ]
  }
{% endschema %}


<div class="hero-wrapper">
<div class="hero-infor">
  <h2 class="hero__title"> {{ section.settings.title }}</h2>
  <h2 class="hero__heading">{{ section.settings.heading }}</h2>
  <p class="hero__desc">{{ section.settings.desc }}</p>
</div>
<div class="hero-img">
  
  <img src="{{ section.settings.img | img_url : "master" }}" class="hero__image" >
</div>
</div>
<style>
  .hero-wrapper {
    display: flex;
    gap: 40px;
  }
  .hero-img {
    width: 45%;
    background-color: yellow;
    
  }
  .hero-infor {
    width: 45%;
    background-color: #fff;
  }
    .hero-img > img {
      width: 100%;
    }
</style>
{% schema %}
  {
    "name" : "Herro",
    "settings": [
      {
        "type": "text",
        "id" : "title",
        "label": "Title Hero",
        "default": "this is Hero"
      },
      {
        "type": "text",
        "id" : "heading",
        "label": "Heading Hero",
        "default": "this is Hero"
      },
      {
        "type": "text",
        "id" : "desc",
        "label": "DESC Hero",
        "default": "this is Hero"
      },
      {
        "type": "image_picker",
        "id" : "img",
        "label": "Img Hero"
      }
    ],
    "presets": [
      {
        "name": "Hero"
      }
    ]
  }
{% endschema %}


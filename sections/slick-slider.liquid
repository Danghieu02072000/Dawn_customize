<h1>{{ section.settings.heading }}</h1>


<div class="customeContainer">
  {% for block in section.blocks %}
    <div class="customContainer__slide">
      <h2 class="customContainer__title">
        {{ block.settings.title }}</h2>
      <div class="customContainer__image">
        <img src="{{ "Img_aoday3.jpg" | asset_url }}" alt="">
      </div>
    </div>
  {% endfor %}
</div>
<style>
  .customeContainer {
    padding: 1rem;
    display: flex;
    
    gap: 30px;
  }
  .customContainer__slide {
    width: calc(100% / 4 - 30px);
    padding: 1em;
    box-shadow: 0 10px 13px -7px #787272;
  }
  .customContainer__title {}
  .customContainer__image img {
    width: 100%;
  }
</style>
{% schema %}
  {
    "name": "slick slider",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "This is Slick Slider"
      }
    ],
    "blocks": [
      {
        "type": "columns",
        "name": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slick Slider"
      }
    ]
  }
{% endschema %}
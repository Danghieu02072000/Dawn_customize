{{ "owl.carousel.min.css" | asset_url | stylesheet_tag }}
{{ "owl.theme.default.min.css" | asset_url | stylesheet_tag }}
<div class="heading__wrapper">
  <h1>{{ section.settings.heading }}</h1>
  {% if section.settings.icon_heading %}}
    <div class="heading__img">
  <img src="{{ section.settings.icon_heading | image_url}}" alt="" width="28px" height="28px" >
  </div>
  {% endif %}
</div>

<div class="customeContainer owl-carousel">
  {% for block in section.blocks %}
    <div class="customContainer__slide">
      <h2 class="customContainer__title">
        {{ block.settings.title }}</h2>
      <div class="customContainer__image">
        <img
          src="{{ block.settings.image | img_url : "master" }}"
          alt=""
          loading="lazy">
      </div>
    </div>
  {% endfor %}
</div>
{{ "jquery.min.js" | asset_url | script_tag }}
{{ "owl.carousel.min.js" | asset_url | script_tag }}
{{ "main123.js" | asset_url | script_tag }}
<style>
  .heading__wrapper {
    display: flex;
    gap: 5px;
    align-items: center;
  }
  .customeContainer {
    padding: 1rem;
    display: flex;
    gap: 40px;
  }
  .customContainer__slide {
    padding: 1em;
    box-shadow: 0 10px 13px -7px #787272;
  }
  .customContainer__title {}
  .customContainer__image img {
    width: 100%;
  }
      .owl-next {
        width: 35px;
        height: 35px;
        border-radius: 100%;
        background-color: rgba(0, 0, 0, 0.1) !important;
    }
    .owl-next > span {
        color: #fff;
        font-size: 28px;
        line-height: 1;
    }
    .owl-prev {
        width: 35px;
        height: 35px;
        border-radius: 100%;
        background-color: rgba(0, 0, 0, 0.1) !important;
    }
    .owl-prev > span {
        color: #fff;
        font-size: 28px;
        line-height: 1;
    }
    .owl-nav {
        position: absolute;
        top:-12%;
        right: 30px;
        display: flex;
        gap: 5px;
    }
    .owl-prev:active,.owl-prev:hover {
        background-color: #151515 !important;
    }
    .owl-next:active,.owl-next:hover {
        background-color: #151515 !important;
    }
</style>
{% schema %}
  {
    "name": "slick slider",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "This is Slick Slider"
      },
      {
        "type": "image_picker",
        "id" : "icon_heading",
        "label": "Icon Heading"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slick Slider"
      }
    ]
  }
{% endschema %}
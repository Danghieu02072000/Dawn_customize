{{ "owl.theme.default.min.css" | asset_url | stylesheet_tag }}
<div class="heading__wrapper">
  <h2 class="heading__text">{{ section.settings.heading }}</h2>
  {% if section.settings.icon_heading %}
  <img src="{{ section.settings.icon_heading | image_url}}" alt="" width="28px" height="28px" >
  {% endif %}
</div>

<div class="customeContainer owl-carousel">
  {% for block in section.blocks %}
    <div class="customContainer__slide">
      <h2 class="customContainer__title">
        {{ block.settings.title }}</h2>
      <div class="customContainer__item">
        <div class="customContainer__item-info"> 
          <h3 class="customContainer__item-heading"> {{ block.settings.item_heading }}</h3>
          <span class="customContainer__item-text"> {{ block.settings.item_text }}</span>
          <span class= "customContainer__item-price"> {{ block.settings.item_price | money }} </span>
        </div>
        <div class="customContainer__item-img"> 
          <img class=""
          src="{{ block.settings.image | img_url : "master" }}"
          alt=""
          loading="lazy">
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<style>
  .customContainer__item-info {
    display: flex;
    flex-direction: column;
  }
  .customContainer__item-heading {
    font-size: 24px;
    line-height: 32px;
    font-weight: 700;
  }
  .customContainer__item-text {
    margin-top: 16px;
    font-size: 18px;
    line-height: 28px;
    color: rgb(150 150 150)
  }
  .customContainer__item-price {
    margin-top: 5px;
    font-size: 18px;
    line-height: 22px;
    color: rgb(255 77 32)
  }
  .customContainer__item {
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
    padding: 15px;
    border-radius: 1rem;
    background-color: rgb(246 246 246);
    border-radius: 16px;
  }
  .customContainer__item-img img{
    height: 110px;
    width: auto !important;
  }
  .slider-home {
    max-width: 120rem;
    margin: 0 auto;
    margin-top: 30px;
    padding: 50px;
  }
  .heading__text {
    font-size: 36px;
    line-height: 40px;
    font-weight: 700;
  }
  .heading__wrapper {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  .customeContainer {
    padding: 1rem;
    display: flex;
    gap: 40px;
    margin-top: 30px
  }
  .customContainer__slide {
  }
  .customContainer__title {}
  .customContainer__item-img {
    width: 40%;
  }
      .owl-next {
        width: 35px;
        height: 35px;
        border-radius: 100%;
        background-color: rgba(0, 0, 0, 0.1) !important;
    }
    .owl-next > span {
        color: #fff;
        font-size: 28px;
        line-height: 1;
    }
    .owl-prev {
        width: 35px;
        height: 35px;
        border-radius: 100%;
        background-color: rgba(0, 0, 0, 0.1) !important;
    }
    .owl-prev > span {
        color: #fff;
        font-size: 28px;
        line-height: 1;
    }
    .owl-nav {
        position: absolute;
        top:-20%;
        right: 30px;
        display: flex;
        gap: 5px;
    }
    .owl-prev:active,.owl-prev:hover {
        background-color: #151515 !important;
    }
    .owl-next:active,.owl-next:hover {
        background-color: #151515 !important;
    }
</style>
{% schema %}
  {
    "name": "slick slider",
    "tag" : "section",
    "class": "slider-home",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "This is Slick Slider"
      },
      {
        "type": "image_picker",
        "id" : "icon_heading",
        "label": "Icon Heading"
      },
      {
        "type": "range",
        "id" : "num_columns",
        "label": "Number Columns",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 4
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, 
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
                    {
            "type": "text",
            "id": "item_heading",
            "label": "Item Heading"
          },
                    {
            "type": "text",
            "id": "item_text",
            "label": "Item Text"
          },
                    {
            "type": "text",
            "id": "item_price",
            "label": "Item Price"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slick Slider"
      }
    ]
  }
{% endschema %}
<script>
  window.number_columns = {{ section.settings.num_columns}};
 
</script>
